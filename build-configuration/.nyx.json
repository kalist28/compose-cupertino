{
  "initialVersion": "0.1.4",
  "preset": "simple",
  "scheme": "SEMVER",
  "verbosity": "INFO",
  "releaseLenient": true,
  "commitMessageConventions": {
    "enabled": ["conventional"],
    "items": {
      "conventional": {
        "expression": "^(?<type>feat|fix|chore|docs|style|refactor|test|perf)(\\((?<scope>[a-zA-Z0-9_\\-]+)\\))?: (?<description>.+)$",
        "bumpExpressions": {
          "major": "^feat!|BREAKING CHANGE",
          "minor": "^feat",
          "patch": "^fix|chore|docs|style|refactor|test|perf"
        }
      }
    }
  },
  "releaseTypes": {
    "enabled": ["release"],
    "items": {
      "release": {
        "gitPush": true,
        "publish": true,
        "releaseName": "release",
        "description": "Stable release",
        "collapseVersions": false,
        "buildMetadata": "",
        "preRelease": ""
      }
    }
  }
}